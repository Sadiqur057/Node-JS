doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= GreenBasket
    link(rel='stylesheet', href='public/css/style.css') 
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')


  body
    
    nav.navbar.navbar-expand-lg.bg-body-tertiary

      .container-fluid
        a.logo-heading.navbar-brand(href='#') GreenBasket
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon

        .collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page', href='#') Home
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false') Dropdown
              ul.dropdown-menu
                li
                  a.dropdown-item(href='#') Action
                li
                  a.dropdown-item(href='#') Another action
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href='#') Something else here
            li.nav-item
              a.nav-link.disabled(aria-disabled='true') Disabled
          form.d-flex(role='search')
            input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search

        
    section#landing 
      .container.flex-container
        .flex-item-1
          h1.main-heading GreenBasket
          h1.secondary-heading Your Fresh Green Grocery Source!
        .flex-item-2
    
    h1.secondary-heading.text-center.mt-4 Product Categories
    section#product 
      .container
        .card
          .card-header
            ul.nav.nav-tabs.card-header-tabs.justify-space-around
              li.nav-item
                a.nav-link.active(aria-current='true', href='#') Fresh Fruits
              li.nav-item
                a.nav-link(href='#') Fresh Vegetables
              li.nav-item
                a.nav-link(href='#') Groceries
              li.nav-item
                a.nav-link(href='#') Health Care

          .row
            .col-md-3
              .card-img 
                img.card-img-top(src="../public/img/apple.jpg", alt="...")
              .card-body
                  h5.card-title Apple
                  p.card-text 
                  span Price: $3.99/kg
                  .row.mt-2.justify-space-around
                    .col-md-3.my-2
                      input.form-control.form-control.price(type="number")
                    .col-md-6.my-2
                      a.btn.btn-primary.m-auto(href="#") Add Cart
                    .row
            .col-md-3
              .card-img 
                img.card-img-top(src="../public/img/guava.jpg", alt="...")
              .card-body
                  h5.card-title Guava
                  p.card-text 
                  span Price: $1.49/kg
                  .row.mt-2.justify-space-around
                    .col-md-3.my-2
                      input.form-control.form-control.price(type="number")
                    .col-md-6.my-2
                      a.btn.btn-primary.m-auto(href="#") Add Cart
            .col-md-3
              .card-img 
                img.card-img-top(src="../public/img/orange.jpg", alt="...")
              .card-body
                  h5.card-title Orange
                  p.card-text 
                  span Price: $4.49/kg
                  .row.mt-2.justify-space-around
                    .col-md-3.my-2
                      input.form-control.form-control.price(type="number")
                    .col-md-6.my-2
                      a.btn.btn-primary.m-auto(href="#") Add Cart
            .col-md-3
              .card-img 
                img.card-img-top(src="../public/img/mango.jpg", alt="...")
              .card-body
                  h5.card-title Mango
                  p.card-text 
                  span Price: $2.99/kg
                  .row.mt-2.justify-space-around
                    .col-md-3.my-2
                      input.form-control.form-control.price(type="number")
                    .col-md-6.my-2
                      a.btn.btn-primary.m-auto(href="#") Add Cart



    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')
